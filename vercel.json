{
  "version": 2,
  "builds": [
    { "src": "backend/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/siswa/(.*)", "dest": "backend/siswa/$1.js" },
    { "src": "/pembayaran/(.*)", "dest": "backend/pembayaran/$1.js" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
